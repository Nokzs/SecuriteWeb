# Variables lues par Docker Compose (interpolation ${...} dans docker-compose.yml)
GATEWAY_PORT=8082
FRONT_PORT=3000
FRONT_PORTB=3001

# URLs publiques (celles que le navigateur utilise)
GATEWAY_PUBLIC_BASE_URL=http://localhost:8082
FRONT_PUBLIC_BASE_URL=http://localhost:3000

# Redirect URI OIDC (doit matcher exactement celle envoyée par le gateway)
OAUTH2_GATEWAY_REDIRECT_URIS=http://localhost:8082/login/oauth2/code/gateway-client

# Redirections après login gérées par la gateway
APP_REDIRECT_DEFAULT=http://localhost:3000/
APP_REDIRECT_APPA=http://localhost:3000/
APP_REDIRECT_APPB=http://localhost:3001/
